@model SportsStore.Domain.Entities.Cart

<div id="cart">
    <span class="caption">
        <b>Your Cart:</b>
        @Model.Lines.Sum(x=>x.Quantity) item(s).
        @Model.ComputeTotalValue().ToString("c")
    </span>

    @Html.ActionLink("Checkout", "Index", "Cart", new { resultUrl = Request.Url.PathAndQuery}, null)
</div>